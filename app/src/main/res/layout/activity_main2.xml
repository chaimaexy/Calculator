<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:id="@+id/drawerLayout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    >

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:layout_gravity="start"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:layout_gravity="start"

            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView

                android:id="@+id/input1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="64"
                android:text=""
                android:textAlignment="viewEnd"

                android:textSize="40sp"
                android:visibility="visible"
                tools:layout_editor_absoluteX="5dp"
                tools:layout_editor_absoluteY="239dp"
                tools:ignore="MissingConstraints"
                />
            <TextView
                android:id="@+id/output1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"

                android:text="0"

                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/result_tv"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="0dp"
                />
        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
            <TableRow>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/inverse"

                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"


                    android:text="1/x" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/expo"

                    android:layout_width="77dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"

                    android:text="e" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/absolu"

                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="|x|" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/supp"

                    android:layout_width="91dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"

                    android:text="sup" />

            </TableRow>
            <TableRow>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sin"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="sin"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cos"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="cos"

                    android:layout_margin="5dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tan"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="tan"

                    android:layout_margin="5dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/log"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"

                    android:text="log" />

            </TableRow>
            <TableRow>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ln"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="ln"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/X"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="x!"
                    android:layout_margin="5dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/carry"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="x^n"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/sqrt"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="sqrt"
                    android:layout_margin="5dp"
                    />

            </TableRow>
            <TableRow>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/MC1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="MC"
                    android:layout_margin="5dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/MR1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="MR"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mLeft1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="M+"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/mRight1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="M-"
                    android:layout_margin="5dp"
                    />

            </TableRow>
            <TableRow>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/C1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="C"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/modulo1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="%"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fois1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="X"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/division1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="/"
                    android:layout_margin="5dp"
                    />


            </TableRow>
            <TableRow>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_71"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="7"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_81"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="8"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_91"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="9"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/moin1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="-"
                    android:layout_margin="5dp"
                    />


            </TableRow>
            <TableRow>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_41"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="4"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_51"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="5"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_61"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="6"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/plus1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="+"
                    android:layout_margin="5dp"
                    />


            </TableRow>
            <TableRow>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_11"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="1"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_21"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="2"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_31"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="3"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/egale1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="="
                    android:backgroundTint="@color/btnBackground2"
                    android:layout_margin="5dp"
                    android:textSize="20sp"
                    />


            </TableRow>
            <TableRow>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_01"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="0"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pareLeft1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text="("
                    android:layout_margin="5dp"
                    />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/pareRight1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text=")"
                    android:layout_margin="5dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/virgulr1"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:text=","
                    android:layout_margin="5dp"
                    />

            </TableRow>



        </TableLayout>
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>